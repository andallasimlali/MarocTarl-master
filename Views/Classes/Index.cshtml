@model IEnumerable<MarocTarl.Models.Classe>

@{
    ViewBag.Title = "Index";
    var id = ViewBag.id ;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create" , new { id = id})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Etab.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Niveau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnnéeScolaire)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Etab.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Niveau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnnéeScolaire)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
